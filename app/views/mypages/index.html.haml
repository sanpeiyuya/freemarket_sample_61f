= render 'shared/header'

- breadcrumb :mypage
%nav.bread-crumbs
  %ul
    %li
      = breadcrumbs separator: " #{content_tag(:i, '', class: 'fa fa-angle-right')} "

.mypage-clearfix
  .mypage

    = render 'shared/side-bar'
              
    .mypage__main
      .mypage__main__user
        = link_to "#", class: "mypage__main__user__icon" do
          %figure
            = image_tag "member_photo_noimage_thumb.png", size: "60x60", class: "user-icon"
            %h2.user-name
              - if user_signed_in?
                = current_user.email
              - else 
                ニックネーム未設定
            %ul.user-info
              %li.user-info__like
                評価
                %span
                  0
              %li.user-info__item
                出品数
                %span
                  0

      .mypage__main__notice-todo
        .mypage__main__notice-todo__tab
          %ul
            %li.active
              .mypage__main__notice-todo__tab__single
                お知らせ
            %li
              .mypage__main__notice-todo__tab__single
                やることリスト
        .mypage__main__notice-todo__tab__content
          %ul
            %li.show
              .mypage__main__notice-todo__tab__content__logo
                現在、お知らせはありません
            %li
              .mypage__main__notice-todo__tab__content__logo
                現在、やることリストはありません

      .mypage__main__item
        .mypage__main__item__head
          購入した商品
        .mypage__main__item__tab
          %ul
            %li.actives
              .mypage__main__item__tab__single
                取引中
            %li
              .mypage__main__item__tab__single
                過去の取引
        .mypage__main__item__tab__content
          %ul
            %li.shows
              .mypage__main__item__tab__content__logo
                取引中の商品がありません
            %li
              .mypage__main__item__tab__content__logo
                過去に取引した商品がありません

= render 'shared/sell-icon'
= render 'shared/aside'
= render 'shared/footer'

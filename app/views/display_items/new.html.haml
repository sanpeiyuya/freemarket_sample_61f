.exhibit
  .exhibit__header
    .exhibit__header__logo
      = link_to "#" do
        %img(src="assets/exhibit_logo.svg" alt="アイコン")

  .exhibit__main
    .exhibit__main__box
      %h2.exhibit__main__box__title
        商品の情報を入力

      = form_for @display_item do |f|
        -# user_idを取得
        - if user_signed_in?
          .user
            = f.hidden_field :user_id, value: current_user.id
        -# 画像投稿フォーム
        .image
          %h3.image__title
            出品画像
            %span.required-icon
              必須
          %p.image__tips
            最大10枚までアップロードできます
          = f.fields_for :images do |i|
            = i.label :image do
              .image__form
                = i.file_field :image, class: "image__form__input"
                %p.image__form__tips ドラッグアンドドロップ<br>またはクリックしてファイルをアップデート
        -# 商品名と商品説明フォーム
        .title
          .title__name
            = f.label :name do
              商品名
              %span.required-icon
                必須
            .box
              = f.text_field :name, class: "title__name__input", placeholder: "商品名（必須40文字まで）"
          .title__description
            = f.label :description do
              商品の説明
              %span.required-icon
                必須
            .box
              = f.text_area :description, class: "title__description__input", placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。"

        -# 商品詳細フォーム（カテゴリ・サイズ・ブランド・コンディション）
        .detail.clearfix
          .detail__title
            商品の詳細
          .detail__form
            -# カテゴリ
            .detail__form__category
              = f.label :category_id do
                カテゴリー
                %span.required-icon
                  必須
              .detail__form__category__input
                %span{class: "fas fa-chevron-down arrow-icon"}
                = f.collection_select(:category_id, @categories, :id, :name, {prompt: "--"}, {class: "exhibit-select"})
              .detail__form__category__input
                %span{class: "fas fa-chevron-down arrow-icon"}
                = f.collection_select(:category_id, @categories, :id, :name, {prompt: "--"}, {class: "exhibit-select"})
              .detail__form__category__input
                %span{class: "fas fa-chevron-down arrow-icon"}
                = f.collection_select(:category_id, @categories, :id, :name, {prompt: "--"}, {class: "exhibit-select"})
            -# サイズ
            .detail__form__size
              = f.label :size_id do
                サイズ
                %span.required-icon
                  必須
              .detail__form__size__input
                %span{class: "fas fa-chevron-down arrow-icon"}
                = f.collection_select(:size_id, @sizes, :id, :size, {prompt: "--"}, {class: "exhibit-select"})
            -# ブランド
            .detail__form__brand
              = f.label :brand_id do
                ブランド
                %span.any-icon
                  任意
              .detail__form__brand__input
                %span{class: "fas fa-chevron-down arrow-icon"}
                = f.collection_select(:brand_id, @brands, :id, :name, {prompt: "--"}, {class: "exhibit-select"})
            -# 商品の状態
            .detail__form__condition
              = f.label :condition_id do
                商品の状態
                %span.required-icon
                  必須
              .detail__form__condition__input
                %span{class: "fas fa-chevron-down arrow-icon"}
                = f.collection_select(:condition_id, @conditions, :id, :name, {prompt: "--"}, {class: "exhibit-select"})

        -# 配送方法フォーム
        .detail.clearfix
          .detail__title
            配送について
            = link_to "#", {class: "exhibit-faq"} do
              ？
          .detail__form
            -# 配送料の負担
            .detail__form__category
              = f.label :delivery_fee_burden_id do
                配送料の負担
                %span.required-icon
                  必須
              .detail__form__category__input
                %span{class: "fas fa-chevron-down arrow-icon"}
                = f.collection_select(:delivery_fee_burden_id, @delivery_fee_burdens, :id, :name, {prompt: "--"}, {class: "exhibit-select"})
            -# 配送方法
            .detail__form__size
              = f.label :delivery_method_id do
                配送方法
                %span.required-icon
                  必須
              .detail__form__size__input
                %span{class: "fas fa-chevron-down arrow-icon"}
                = f.collection_select(:delivery_method_id, @delivery_methods, :id, :name, {prompt: "--"}, {class: "exhibit-select"})
            -# 発送元の地域
            .detail__form__size
              = f.label :prefecture_id do
                発送元の地域
                %span.required-icon
                  必須
              .detail__form__size__input
                %span{class: "fas fa-chevron-down arrow-icon"}
                = f.collection_select(:prefecture_id, @prefectures, :id, :name, {prompt: "--"}, {class: "exhibit-select"})
            -# 発送までの日数
            .detail__form__size
              = f.label :delivery_by_day_id do
                発送までの日数
                %span.required-icon
                  必須
              .detail__form__size__input
                %span{class: "fas fa-chevron-down arrow-icon"}
                = f.collection_select(:delivery_by_day_id, @delivery_by_days, :id, :name, {prompt: "--"}, {class: "exhibit-select"})


        -# 以下適当
        .detail.clearfix

          .price
            = f.label :price
            = f.number_field(:price, min: 300, max: 999999)

          .submit
            = f.submit


  .exhibit__footer
    .exhibit__footer__navi
      %ul.exhibit__footer__navi__list
        %li
          = link_to "#", class: "exhibit__footer__navi__list__ele" do
            プライバシーポリシー
        %li
          = link_to "#", class: "exhibit__footer__navi__list__ele" do
            メルカリ利用規約
        %li
          = link_to "#", class: "exhibit__footer__navi__list__ele" do
            特定商取引に関する表記
    .exhibit__footer__logo
      = link_to "#" do
        %img(src="assets/exhibit_logo_gray.svg" alt="アイコン")

    .exhibit__footer__copylight
      %p.exhibit__footer__copylight__text
        © 2019 Mercari
.exhibit
  .exhibit__header
    .exhibit__header__logo
      = link_to "#" do
        %img(src="assets/exhibit_logo.svg" alt="アイコン")

  .exhibit__main
    .exhibit__main__box
      %h2.exhibit__main__box__title
        商品の情報を入力
      = form_for @display_item do |f|
        .user
          = f.hidden_field :user_id, value: current_user.id
        -# 画像投稿フォーム
        .image
          %h3.image__title
            出品画像
            %span.image__icon
              必須
          %p.image__tips
            最大10枚までアップロードできます
          = f.fields_for :images do |i|
            = i.label :image do
              .image__form
                = i.file_field :image, class: "image__form__input"
                %p.image__form__tips ドラッグアンドドロップ<br>またはクリックしてファイルをアップデート
        -# 商品名と商品説明フォーム
        .title
          .title__name
            = f.label :name do
              商品名
              %span.image__icon
                必須
            .box
              = f.text_field :name
          .title__description
            = f.label :description do
              商品の説明
              %span.image__icon
                必須
            .box
              = f.text_area :description

        .category
          = f.label :category_id
          = f.collection_select(:category_id, @categories, :id, :name)

        .size
          = f.label :size_id
          = f.collection_select(:size_id, @sizes, :id, :size)

        .brand
          = f.label :brand_id
          = f.collection_select(:brand_id, @brands, :id, :name)

        .condition
          = f.label :condition_id
          = f.collection_select(:condition_id, @conditions, :id, :name)

        .delivery_fee_burden
          = f.label :delivery_fee_burden_id
          = f.collection_select(:delivery_fee_burden_id, @delivery_fee_burdens, :id, :name)

        .delivery_method
          = f.label :delivery_method_id
          = f.collection_select(:delivery_method_id, @delivery_methods, :id, :name)

        .prefecture
          = f.label :prefecture_id
          = f.collection_select(:prefecture_id, @prefectures, :id, :name)

        .delivery_by_day
          = f.label :delivery_by_day_id
          = f.collection_select(:delivery_by_day_id, @delivery_by_days, :id, :name)

        .price
          = f.label :price
          = f.number_field(:price, min: 300, max: 999999)

        .submit
          = f.submit
  .exhibit__footer
    .exhibit__footer__navi
      %ul.exhibit__footer__navi__list
        %li
          = link_to "#", class: "exhibit__footer__navi__list__ele" do
            プライバシーポリシー
        %li
          = link_to "#", class: "exhibit__footer__navi__list__ele" do
            メルカリ利用規約
        %li
          = link_to "#", class: "exhibit__footer__navi__list__ele" do
            特定商取引に関する表記
    .exhibit__footer__logo
      = link_to "#" do
        %img(src="assets/exhibit_logo_gray.svg" alt="アイコン")

    .exhibit__footer__copylight
      %p.exhibit__footer__copylight__text
        © 2019 Mercari